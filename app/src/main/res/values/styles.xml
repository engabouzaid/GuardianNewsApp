<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  MainActivityGeneral theme. -->
    <style name="MainActivityGeneral" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/big_margin</item>
        <item name="android:layout_marginRight">@dimen/big_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/huge_text</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <!--  MainTextStyle theme. -->
    <style name="MainTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/big_margin</item>
        <item name="android:layout_marginRight">@dimen/big_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <!--  SecondaryTextStyle theme. -->
    <style name="SecondaryTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/big_margin</item>
        <item name="android:layout_marginRight">@dimen/big_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
</resources>
